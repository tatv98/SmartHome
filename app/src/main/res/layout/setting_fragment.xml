<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/frag_setting"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rLogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/setting_header"
            />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="24dp"
            android:textColor="#2196F3"
            android:text="CONNECT TO MQTT"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/ivLogo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/lTop"
        android:background="@drawable/setting_boder_edittext"
        app:layout_constraintTop_toBottomOf="@id/rLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvServer"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="Server:"
                android:textColor="#000"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/edtServer"
                android:background="@drawable/setting_boder_edittext"
                android:textSize="12sp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPort"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="Port:"
                android:textColor="#000"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/edtPort"
                android:background="@drawable/setting_boder_edittext"
                android:textSize="12sp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvUser"
                android:text="User:"
                android:textSize="12sp"
                android:textColor="#000"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtUser"
                android:background="@drawable/setting_boder_edittext"
                android:textSize="12sp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/tvPass"
                android:text="Password:"
                android:textSize="12sp"
                android:textColor="#000"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtPass"
                android:background="@drawable/setting_boder_edittext"
                android:inputType="textPassword"
                android:textSize="12sp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/btnSave"
                android:text="Save"
                android:background="@drawable/setting_boder_button"
                app:layout_constraintRight_toLeftOf="@id/btnClear"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                tools:ignore="MissingConstraints" />
            <Button
                android:id="@+id/btnClear"
                android:text="Clear"
                android:background="@drawable/setting_boder_button"
                app:layout_constraintLeft_toRightOf="@id/btnSave"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>